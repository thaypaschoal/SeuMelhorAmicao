@if (User.Identity.IsAuthenticated)
{
    using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@Html.DisplayFor(x => User.Identity.Name)<span class="caret"></span></a>
                <ul class="dropdown-menu">
                    @{var usuario = (prjSeuMelhorAmicao.Models.Entidade.Usuario)Session["UsuarioInfo"];}
                    @if (usuario.Perfil.Tipo == "Ong")
                    {
                        <li><a href="@Url.Action("VisualizarPerfilOng", "Account")">Visualizar perfil</a></li>
                    }
                    else
                    {
                        <li><a href="@Url.Action("VisualizarPerfilCliente", "Account")">Visualizar perfil</a></li>
                    }
                    <li role="separator" class="divider"></li>
                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Sair</a></li>
                </ul>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a href="@Url.Action("Registrar", "Account")"><span class="glyphicon glyphicon-user"></span> Registrar Usuario</a></li>
        <li><a href="@Url.Action("RegistrarOng", "Account")"><span class="glyphicon glyphicon-user"></span> Registrar Ong</a></li>
        <li><a href="@Url.Action("Login", "Account")"><span class="glyphicon glyphicon-log-in"></span> Entrar</a></li>
    </ul>

}
