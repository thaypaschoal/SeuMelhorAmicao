@model IEnumerable<prjSeuMelhorAmicao.Models.Entidade.Animal>

@{
    ViewBag.Title = "DetalhesOng";
}

<h2>DetalhesOng</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataEntrada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Especie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ONGId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataEntrada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ONGId)
            </td>
            <td>
                @*Teria que ter algum campo ou informaçao para saber se o animal esta favoritado pelo cliente
                    Ai vc verificaria  se desfavoritado mostra*@
                <a href="@Url.Action("FavoritarAnimal","Cliente",new { id = item.Id })" class="btn btn-success"><i class="glyphicon-plus"></i> Favoritar</a>

                <a href="@Url.Action("DesFavoritarAnimal","Cliente",new { id = item.Id })" class="btn btn-primary"><i class="glyphicon-plus"></i> DesFavoritar</a>

            </td>
        </tr>
    }

</table>
