@model IEnumerable<prjSeuMelhorAmicao.Models.Entidade.Animal>

@{
    ViewBag.Title = "MeusAnimais";
}

<h2>Meus Animais</h2>

<p>
    <a href="@Url.Action("Cadastrar", "Animal")" class="btn btn-info"><i class="glyphicon glyphicon-plus"></i>Novo Animal</a>
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataEntrada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Especie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataEntrada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Especie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", "Animal", new { id=item.Id }, null) |
            @Html.ActionLink("Details", "Detalhes","Animal", new { id=item.Id }, null) |
            @Html.ActionLink("Delete", "Delete", "Animal", new { id=item.Id }, null)
        </td>
    </tr>
}

</table>
